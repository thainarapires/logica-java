package br.com.logica.repeticao;

import javax.swing.JOptionPane;

public class ConverterDecBin {

	public static void main(String[] args) {
		// TODO Auto-generated method stub

		int binario;
		binario = Integer.parseInt(JOptionPane.showInputDialog("Digite um decimal:"));
		String decimal = Integer.toBinaryString(binario);
		System.out.println(decimal);
		JOptionPane.showMessageDialog(null, "O resultado do binario Ã©: " +decimal);
	}

}
