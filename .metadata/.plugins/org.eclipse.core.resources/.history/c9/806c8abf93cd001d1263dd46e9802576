package br.com.logica.repeticao;

import javax.swing.JOptionPane;

public class Potencia {


		public static void main(String[] args) {
		    int base, expoente, limite, resultado = 0;

		    base = Integer.parseInt(JOptionPane.showInputDialog("Entre com a base da potência"));
		    expoente = Integer.parseInt(JOptionPane.showInputDialog("Entre com o expoente"));
		    limite = Integer.parseInt(JOptionPane.showInputDialog("Entre com o limite inferior"));

		    for (int i = 0; i <= limite; i++) {
		        resultado += Math.pow(base, expoente);
		    }

		    JOptionPane.showMessageDialog(null, "O resultado da soma das potências é: " + resultado);
		}
	}

